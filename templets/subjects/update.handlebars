<h1>Update</h1>

<form action="/subjects/{{subject._id}}?_method=PUT" method="post" >
<div>
    <label>Name</label>
    <input type="text" class="form-control" name="name" value="{{solosub.name}}">
</div>

<div>
    <label>code</label>
    <input type="text" class="form-control" name="code" value="{{{solosub.code}}}">
</div>

<div>
    <label>department</label>
    <select name="department" id='' class="form-select">
        {{#each department}}
        <option value="{{department}}">{{name}}</option>
        {{/each}}
    </select>
</div>

<div>
    <label>doctor</label>
    <select name="doctor" id='' class="form-select">
        {{#each doctor}}
        <option value="{{doctor}}">{{name}}</option>
        {{/each}}
    </select>
</div>

<div>
    <button class="btn btn-success" type="submit">save</button>
</div>

</form>